# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env.production and fill in your production values
# NEVER commit .env.production to git!

# ========================================
# SERVER CONFIGURATION
# ========================================

NODE_ENV=production
PORT=4000
API_BASE_URL=https://your-api-domain.com

# ========================================
# DATABASE
# ========================================

# For production, use MongoDB Atlas or your MongoDB server
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tarot-assistant?retryWrites=true&w=majority
# OR use JSON Storage (not recommended for production scale)
# JSON Storage will be used if MONGODB_URI is not set

# ========================================
# AUTHENTICATION (CRITICAL - CHANGE THESE!)
# ========================================

# Generate new secrets for production:
# node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_HEX_STRING_IN_PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_RANDOM_64_CHAR_HEX_STRING
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# CORS (CRITICAL - SET YOUR DOMAIN!)
# ========================================

CORS_ORIGIN=https://your-frontend-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# Multiple origins (comma-separated):
# CORS_ORIGIN=https://app.yourdomain.com,https://www.yourdomain.com

# ========================================
# STRIPE PAYMENTS (PRODUCTION KEYS!)
# ========================================

# Live Mode Keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_LIVE_WEBHOOK_SECRET
STRIPE_PREMIUM_PRICE_ID=price_YOUR_LIVE_PREMIUM_PRICE_ID

# ========================================
# RATE LIMITING
# ========================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# LOGGING
# ========================================

LOG_LEVEL=warn
# Options: error, warn, info, debug

# ========================================
# FEATURE FLAGS
# ========================================

AI_ENABLED=false
PREMIUM_ENABLED=true

# ========================================
# ADMIN
# ========================================

# Comma-separated admin emails
ADMIN_EMAILS=admin@yourdomain.com,support@yourdomain.com

# ========================================
# OPTIONAL SERVICES
# ========================================

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@yourdomain.com

# Redis (for caching - recommended for production)
REDIS_URL=redis://your-redis-host:6379
# OR Redis Cloud:
# REDIS_URL=rediss://default:password@your-redis-cloud.com:12345

# Sentry (for error tracking - recommended)
SENTRY_DSN=https://your-sentry-key@sentry.io/your-project-id

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# ========================================
# SECURITY
# ========================================

# Session Secret (if using sessions)
SESSION_SECRET=another-random-64-char-hex-string-for-sessions

# ========================================
# DEPLOYMENT
# ========================================

# Railway/Heroku will set this automatically
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
