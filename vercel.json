{
  "version": 2,
  "framework": null,
  "installCommand": "npm install && npm install --prefix src/frontend && npm install --prefix api",
  "buildCommand": "cd src/frontend && npm run build",
  "outputDirectory": "src/frontend/dist",
  "env": {
    "VITE_API_URL": "/api"
  },
  "functions": {
    "api/*.js": {
      "includeFiles": "{src/backend,api/node_modules}/**"
    }
  },
  "rewrites": [
    { "source": "/api/vapid", "destination": "/api/vapid.js" },
    { "source": "/api/:path*", "destination": "/api/index.js" },
    { "source": "/debug", "destination": "/api/debug.js" },
    { "source": "/health", "destination": "/api/index.js" }
  ]
}
