{
  "version": 2,
  "framework": null,
  "installCommand": "npm install && npm install --prefix src/frontend && npm install --prefix api",
  "buildCommand": "cd src/frontend && npm run build",
  "outputDirectory": "src/frontend/dist",
  "env": {
    "VITE_API_URL": "/api"
  },
  "functions": {
    "api/*.js": {
      "includeFiles": "{src/backend,api/node_modules}/**"
    }
  },
  "routes": [
    { "src": "/api/vapid", "dest": "/api/vapid.js" },
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/debug", "dest": "/api/debug.js" },
    { "src": "/health", "dest": "/api/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
